{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es6",
      "scripthost"
    ],
    "jsx": "react"
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ]
}